<% article.errors.full_messages.each do |error| %>
  <%= error %>
<% end %>

<%= simple_form_for article do |f| %>
  <%= f.input :title %>
  <%= f.input :body %>

  <p>
    <%= f.text_field :tag_list, label: "tag_list" %>
  </p>

  <p>
    <% if @article.image.exists? %>
      <%= image_tag @article.image.url(:medium) %><br/>
    <% end %>
    <%= f.file_field :image, label: "Attach an image" %>
  </p>

  <%= f.button :submit %>

<% end %>

